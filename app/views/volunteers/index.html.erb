<h1>Voluntários</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Função</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.name %></td>
        <td><%= volunteer.function %></td>
        <td><%= link_to 'Mostrar', volunteer %></td>
        <td><%= link_to 'Editar', edit_volunteer_path(volunteer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo voluntário', new_volunteer_path %>
<br>
<%= link_to 'Voluntários aguardando aprovação', waiting_approval_path if current_volunteer.Gestor? %>
<br>
<%= link_to 'Página Inicial', landing_pages_path %>
