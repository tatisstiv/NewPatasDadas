<%= form_with(model: fixed_scheduling, local: true) do |form| %>
  <% if fixed_scheduling.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fixed_scheduling.errors.count, "error") %> prohibited this fixed_scheduling from being saved:</h2>

      <ul>
      <% fixed_scheduling.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <p>Animal: <%= @fixed_scheduling.animal.name %></p>
  </div>

  <div class="field">
    <%= form.label :day_of_week, "Dia da semana" %>
    <%= form.select :day_of_week, options_for_select(
      [
        ["Segunda-feira", "Segunda-feira"],
        ["Terça-feira", "Terça-feira"],
        ["Quarta-feira", "Quarta-feira"],
        ["Quinta-feira", "Quinta-feira"],
        ["Sexta-feira", "Sexta-feira"],
        ["Sábado", "Sábado"]
      ]
    ) %>
  </div>
  
  <div class="field">
    <%= form.label :hour, "Horário" %>
    <%= form.time_field :hour, id: @fixed_scheduling.hour %>
  </div>
  
  <%= form.hidden_field :animal_id, id: @fixed_scheduling.animal_id %>

  <%= form.hidden_field :volunteer_id, id: @fixed_scheduling.volunteer_id %>

  <div class="actions">
    <%= form.submit "Salvar" %>
  </div>
<% end %>
