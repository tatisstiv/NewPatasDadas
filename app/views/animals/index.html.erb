<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Raca</th>
      <th>Cor</th>
      <th>Tamanho</th>
      <th>Timestamps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.nome %></td>
        <td><%= animal.raca %></td>
        <td><%= animal.cor %></td>
        <td><%= animal.tamanho %></td>
        <td><%= animal.timestamps %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

