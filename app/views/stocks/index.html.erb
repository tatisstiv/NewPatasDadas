<p id="notice"><%= notice %></p>

<h1>Estoque</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Quantidade</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.amount %></td>
        <td><%= stock.kind %></td>
        <td><%= link_to 'Mostrar', stock %></td>
        <td><%= link_to 'Editar', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destruir', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
